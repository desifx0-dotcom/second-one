# ============================================
# Video AI SaaS - Production Environment
# ============================================

# === APPLICATION ===
FLASK_ENV=production
FLASK_APP=app.py
SECRET_KEY=your-production-secret-key-change-this-immediately-with-64-chars
HOST=0.0.0.0
PORT=5000
SERVER_NAME=api.yourdomain.com

# === DATABASE ===
DATABASE_URL=postgresql://videoai:secure_password@postgres:5432/video_ai_production
REDIS_URL=redis://redis:6379/0

# === AI API KEYS ===
OPENAI_API_KEY=sk-your-openai-api-key-here
STABILITY_API_KEY=sk-your-stability-api-key-here
GOOGLE_API_KEY=your-google-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here  # Optional
COHERE_API_KEY=your-cohere-api-key-here  # Optional

# === CLOUD STORAGE ===
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-video-ai-bucket
AWS_REGION=us-east-1
AWS_S3_ENDPOINT=https://s3.amazonaws.com

GOOGLE_CLOUD_STORAGE_BUCKET=your-gcs-bucket
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string

# === PAYMENT PROCESSING ===
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# === EMAIL ===
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_DEFAULT_SENDER=noreply@yourdomain.com
MAIL_MAX_EMAILS=50
MAIL_SUPPRESS_SEND=false

SENDGRID_API_KEY=your-sendgrid-api-key

# === SMS NOTIFICATIONS (Optional) ===
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# === MONITORING ===
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project
LOG_LEVEL=INFO
LOG_FILE=/var/log/video-ai/app.log
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus

# === CORS & SECURITY ===
CORS_ORIGINS=https://app.yourdomain.com,https://yourdomain.com
SESSION_COOKIE_DOMAIN=.yourdomain.com
SESSION_COOKIE_SECURE=true
REMEMBER_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# === RATE LIMITING ===
RATE_LIMIT_PER_DAY=1000
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_MINUTE=20
UPLOAD_LIMIT_PER_DAY=10
API_LIMIT_PER_HOUR=1000

# === FILE UPLOAD ===
MAX_CONTENT_LENGTH=1073741824  # 1GB
UPLOAD_FOLDER=/var/uploads
ALLOWED_EXTENSIONS=mp4,avi,mov,mkv,webm,mp3,wav,m4a,flac

# === PROCESSING LIMITS ===
MAX_VIDEO_DURATION=3600  # 1 hour in seconds
MAX_CONCURRENT_PROCESSES=10
PROCESSING_TIMEOUT=1800  # 30 minutes

# === SUBSCRIPTION TIERS ===
FREE_TIER_LIMIT=3  # Videos per month
PLUS_TIER_LIMIT=50
PRO_TIER_LIMIT=500
ENTERPRISE_TIER_LIMIT=999999

# === PRICING ===
PLUS_TIER_PRICE=19.99
PRO_TIER_PRICE=49.99
ENTERPRISE_TIER_PRICE=199.99

# === CDN ===
CDN_URL=https://cdn.yourdomain.com
CDN_UPLOADS_PATH=/uploads
CDN_THUMBNAILS_PATH=/thumbnails

# === ANALYTICS ===
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token